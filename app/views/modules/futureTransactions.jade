.moduleDiv
    h6.subheader.moduleHead#futureTransactionsHeader
        .moduleIcon
            img(src="#{rootPath}img/money.png", alt="")
        .moduleButtons
            img#futureTransactionsDoc(src="#{rootPath}img/book.png", alt="", title="documentation")
            | 
            img#futureTransactionsClearForm(src="#{rootPath}img/bin.png", alt="", title="clear form")
            | 
            img#futureTransactionsRefresh(src="#{rootPath}img/arrow_refresh.png", alt="", title="refresh")
        | Transactions
    .moduleContent#futureTransactionsContent
        pre.moduleAlert#futureTransactionsAlertBox
        form#futureTransactionsForm(style="margin-bottom: 0px;", autocomplete="off")
            .row
                .small-3.columns
                    label
                        | ID 
                        img#futureTransactionsClearId(src="#{rootPath}img/bin.png", alt="", title="clear id field")
                    input#futureTransactionsId(type="text", disabled)
                .small-4.columns
                    label(for="futureTransactionsAmount") Amount
                    input#futureTransactionsAmount(type="text", required)
                .small-5.columns
                    div(style="float: left; width: 50%;")
                        label(for="futureTransactionsDate") dd/mm/yyyy
                        input#futureTransactionsDate(type="text", required)
                    div(style="float: right; width: 40%;")
                        label(for="futureTransactionsTime") hhmm
                        input#futureTransactionsTime(type="text", required)
            .row
                .small-2.columns
                    label.inline Tag
                .small-8.columns#futureTransactionsTagContainer
                .small-2.columns(title="do not match")
                    label(for="futureTransactionsDnm") DNM
                    input#futureTransactionsDnm(type="checkbox")
            .row
                .small-3.columns
                    label.inline(for="futureTransactionsDescription") Description
                .small-5.columns
                    input#futureTransactionsDescription(type="text")
                .small-4.columns
                    ul.button-group.even-2
                        li
                            button.small(type="submit") OK
                        li
                            a.button.small#futureTransactionsDel(href="#") Del
        div(style="overflow: auto; height: 300px;")
            table#futureTransactionsTable(style="width: 100%; border: none;")
    .moduleOverlay#futureTransactionsOverlay
